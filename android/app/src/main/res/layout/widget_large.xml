<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_large_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="6dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trump"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watch"
                android:textColor="#EF4444"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:id="@+id/widget_day_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 330 of 1461"
            android:textColor="#94A3B8"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="6dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/countdown_box_background"
            android:padding="10dp"
            android:layout_marginEnd="4dp">
            <TextView
                android:id="@+id/countdown_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1131"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DAYS"
                android:textColor="#94A3B8"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/countdown_box_background"
            android:padding="10dp"
            android:layout_marginEnd="4dp">
            <TextView
                android:id="@+id/countdown_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HRS"
                android:textColor="#94A3B8"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/countdown_box_background"
            android:padding="10dp">
            <TextView
                android:id="@+id/countdown_mins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="55"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MINS"
                android:textColor="#94A3B8"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:progressDrawable="@drawable/progress_bar_fill"
        android:max="1000"
        android:progress="225"/>

    <TextView
        android:id="@+id/progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="6dp"
        android:text="22,53% of term completed"
        android:textColor="#94A3B8"
        android:textSize="10sp"/>

    <!-- Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/countdown_box_background"
            android:padding="6dp"
            android:layout_marginEnd="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEBT"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
            <TextView
                android:id="@+id/stat_debt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$38,3T"
                android:textColor="#EF4444"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/stat_debt_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+$2,1T"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/countdown_box_background"
            android:padding="6dp"
            android:layout_marginEnd="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S&amp;P 500"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
            <TextView
                android:id="@+id/stat_sp500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6,827"
                android:textColor="#22C55E"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/stat_sp500_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-1,1%"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/countdown_box_background"
            android:padding="6dp"
            android:layout_marginEnd="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GAS"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
            <TextView
                android:id="@+id/stat_gas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$2,95"
                android:textColor="#EF4444"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/stat_gas_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$-0,13"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/countdown_box_background"
            android:padding="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTC"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
            <TextView
                android:id="@+id/stat_bitcoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$88K"
                android:textColor="#F59E0B"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/stat_bitcoin_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-1,5%"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/countdown_box_background"
            android:padding="6dp"
            android:layout_marginEnd="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GOLD"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
            <TextView
                android:id="@+id/stat_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$2,650"
                android:textColor="#F59E0B"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/stat_gold_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0,4%"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/countdown_box_background"
            android:padding="6dp"
            android:layout_marginEnd="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OIL"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
            <TextView
                android:id="@+id/stat_oil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$59,0"
                android:textColor="#22C55E"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/stat_oil_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-2,0%"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/countdown_box_background"
            android:padding="6dp"
            android:layout_marginEnd="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UNEMP"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
            <TextView
                android:id="@+id/stat_unemployment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4,4%"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/stat_unemployment_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0,1%"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/countdown_box_background"
            android:padding="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INFL"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
            <TextView
                android:id="@+id/stat_inflation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2,7%"
                android:textColor="#EF4444"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/stat_inflation_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0,2%"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>