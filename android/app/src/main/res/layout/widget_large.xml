<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_large_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trump"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Watch"
            android:textColor="#EF4444"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_day_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 323 of 1,461"
            android:textColor="#94A3B8"
            android:textSize="10sp"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="6dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_background_card"
            android:padding="10dp">

            <TextView
                android:id="@+id/countdown_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1138"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DAYS"
                android:textColor="#94A3B8"
                android:textSize="9sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="#475569"
            android:textSize="18sp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_background_card"
            android:padding="10dp">

            <TextView
                android:id="@+id/countdown_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOURS"
                android:textColor="#94A3B8"
                android:textSize="9sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="#475569"
            android:textSize="18sp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_background_card"
            android:padding="10dp">

            <TextView
                android:id="@+id/countdown_mins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="56"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MINS"
                android:textColor="#94A3B8"
                android:textSize="9sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="#475569"
            android:textSize="18sp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_background_card"
            android:padding="10dp">

            <TextView
                android:id="@+id/countdown_secs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SECS"
                android:textColor="#94A3B8"
                android:textSize="9sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp">

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:progressDrawable="@drawable/progress_bar_fill"
            android:max="100"
            android:progress="22" />

        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22.07% of term completed"
            android:textColor="#94A3B8"
            android:textSize="9sp"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/widget_background_card"
            android:padding="10dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NATIONAL DEBT"
                android:textColor="#94A3B8"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/stat_debt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$36.4T"
                android:textColor="#EF4444"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/stat_debt_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+$2.1T since Jan 20"
                android:textColor="#64748B"
                android:textSize="8sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/widget_background_card"
            android:padding="10dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S&amp;P 500"
                android:textColor="#94A3B8"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/stat_sp500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$595.50"
                android:textColor="#22C55E"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/stat_sp500_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0.42% today"
                android:textColor="#64748B"
                android:textSize="8sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/widget_background_card"
            android:padding="10dp"
            android:layout_marginStart="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BITCOIN"
                android:textColor="#94A3B8"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/stat_bitcoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$97,500"
                android:textColor="#F59E0B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/stat_bitcoin_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2.5% 24h"
                android:textColor="#64748B"
                android:textSize="8sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>