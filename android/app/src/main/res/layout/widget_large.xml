<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_large_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trump"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watch"
                android:textColor="#EF4444"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/day_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 330 of 1461"
            android:textColor="#94A3B8"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- Countdown blocks -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/countdown_box_background"
            android:padding="10dp"
            android:layout_marginEnd="6dp">
            <TextView
                android:id="@+id/days_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1131"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:singleLine="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DAYS"
                android:textColor="#94A3B8"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/countdown_box_background"
            android:padding="10dp"
            android:layout_marginEnd="6dp">
            <TextView
                android:id="@+id/hours_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HRS"
                android:textColor="#94A3B8"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/countdown_box_background"
            android:padding="10dp"
            android:layout_marginEnd="6dp">
            <TextView
                android:id="@+id/minutes_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MINS"
                android:textColor="#94A3B8"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/countdown_box_background"
            android:padding="10dp">
            <TextView
                android:id="@+id/seconds_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SECS"
                android:textColor="#94A3B8"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Progress bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:progressDrawable="@drawable/progress_bar_fill"
        android:max="1000"
        android:progress="225"/>

    <TextView
        android:id="@+id/progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        android:text="22,53% of term completed"
        android:textColor="#94A3B8"
        android:textSize="11sp"/>

    <!-- Stats row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/countdown_box_background"
            android:padding="8dp"
            android:layout_marginEnd="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEBT"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
            <TextView
                android:id="@+id/debt_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$38,3T"
                android:textColor="#EF4444"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/debt_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+$2,1T"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/countdown_box_background"
            android:padding="8dp"
            android:layout_marginEnd="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S&amp;P 500"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
            <TextView
                android:id="@+id/sp500_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6,827"
                android:textColor="#22C55E"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/sp500_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-1,1%"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/countdown_box_background"
            android:padding="8dp"
            android:layout_marginEnd="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GAS"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
            <TextView
                android:id="@+id/gas_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$3,07"
                android:textColor="#EF4444"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/gas_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$-0.01"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/countdown_box_background"
            android:padding="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTC"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
            <TextView
                android:id="@+id/btc_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$89K"
                android:textColor="#22C55E"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/btc_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0,1%"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>