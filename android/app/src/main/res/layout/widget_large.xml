<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_large_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trump"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Watch"
            android:textColor="#EF4444"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_day_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 330 of 1,461"
            android:textColor="#94A3B8"
            android:textSize="11sp"
            android:singleLine="true" />
    </LinearLayout>

    <!-- Countdown Blocks - Bigger fonts -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <!-- Days -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_background_card"
            android:padding="12dp">
            <TextView
                android:id="@+id/countdown_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1131"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:singleLine="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DAYS"
                android:textColor="#94A3B8"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="#475569"
            android:textSize="24sp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <!-- Hours -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_background_card"
            android:padding="12dp">
            <TextView
                android:id="@+id/countdown_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:singleLine="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HRS"
                android:textColor="#94A3B8"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="#475569"
            android:textSize="24sp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <!-- Minutes -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_background_card"
            android:padding="12dp">
            <TextView
                android:id="@+id/countdown_mins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:singleLine="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MINS"
                android:textColor="#94A3B8"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="#475569"
            android:textSize="24sp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <!-- Seconds -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_background_card"
            android:padding="12dp">
            <TextView
                android:id="@+id/countdown_secs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:singleLine="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SECS"
                android:textColor="#94A3B8"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:progressDrawable="@drawable/progress_bar_fill"
        android:max="100"
        android:progress="22" />

    <TextView
        android:id="@+id/progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22.53% of term completed"
        android:textColor="#94A3B8"
        android:textSize="10sp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="10dp" />

    <!-- Stats Grid: 4 cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- National Debt -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/widget_background_card"
            android:padding="10dp"
            android:layout_marginEnd="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEBT"
                android:textColor="#94A3B8"
                android:textSize="9sp" />
            <TextView
                android:id="@+id/stat_debt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$36.4T"
                android:textColor="#EF4444"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/stat_debt_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+$0.2T"
                android:textColor="#64748B"
                android:textSize="9sp" />
        </LinearLayout>

        <!-- S&P 500 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/widget_background_card"
            android:padding="10dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S&amp;P 500"
                android:textColor="#94A3B8"
                android:textSize="9sp" />
            <TextView
                android:id="@+id/stat_sp500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5,950"
                android:textColor="#22C55E"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/stat_sp500_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0.5%"
                android:textColor="#64748B"
                android:textSize="9sp" />
        </LinearLayout>

        <!-- Gas Price -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/widget_background_card"
            android:padding="10dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GAS"
                android:textColor="#94A3B8"
                android:textSize="9sp" />
            <TextView
                android:id="@+id/stat_gas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$2.95"
                android:textColor="#22C55E"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/stat_gas_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-$0.13"
                android:textColor="#64748B"
                android:textSize="9sp" />
        </LinearLayout>

        <!-- Bitcoin -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/widget_background_card"
            android:padding="10dp"
            android:layout_marginStart="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTC"
                android:textColor="#94A3B8"
                android:textSize="9sp" />
            <TextView
                android:id="@+id/stat_bitcoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$101K"
                android:textColor="#F59E0B"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/stat_bitcoin_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2.5%"
                android:textColor="#64748B"
                android:textSize="9sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
