<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_medium_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Header: TrumpWatch + Day counter -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trump"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Watch"
            android:textColor="#EF4444"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_day_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 330 of 1,461"
            android:textColor="#94A3B8"
            android:textSize="10sp" />
    </LinearLayout>

    <!-- Countdown Blocks -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="6dp">

        <!-- Days -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_background_card"
            android:padding="8dp">
            <TextView
                android:id="@+id/countdown_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1131"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="monospace" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DAYS"
                android:textColor="#94A3B8"
                android:textSize="8sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="#475569"
            android:textSize="16sp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp" />

        <!-- Hours -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_background_card"
            android:padding="8dp">
            <TextView
                android:id="@+id/countdown_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="monospace" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HRS"
                android:textColor="#94A3B8"
                android:textSize="8sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="#475569"
            android:textSize="16sp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp" />

        <!-- Minutes -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_background_card"
            android:padding="8dp">
            <TextView
                android:id="@+id/countdown_mins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="monospace" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MINS"
                android:textColor="#94A3B8"
                android:textSize="8sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="#475569"
            android:textSize="16sp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp" />

        <!-- Seconds -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_background_card"
            android:padding="8dp">
            <TextView
                android:id="@+id/countdown_secs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="monospace" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SECS"
                android:textColor="#94A3B8"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:progressDrawable="@drawable/progress_bar_fill"
        android:max="100"
        android:progress="22" />

    <TextView
        android:id="@+id/progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22.53% of term completed"
        android:textColor="#94A3B8"
        android:textSize="9sp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="6dp" />

    <!-- Stats Row: Debt + S&P 500 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- National Debt -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/widget_background_card"
            android:padding="8dp"
            android:layout_marginEnd="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NATIONAL DEBT"
                android:textColor="#94A3B8"
                android:textSize="8sp" />
            <TextView
                android:id="@+id/stat_debt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$36.4T"
                android:textColor="#EF4444"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/stat_debt_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+$0.2T since Jan 20"
                android:textColor="#64748B"
                android:textSize="8sp" />
        </LinearLayout>

        <!-- S&P 500 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/widget_background_card"
            android:padding="8dp"
            android:layout_marginStart="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S&amp;P 500"
                android:textColor="#94A3B8"
                android:textSize="8sp" />
            <TextView
                android:id="@+id/stat_sp500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5,950"
                android:textColor="#22C55E"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/stat_sp500_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0.5% today"
                android:textColor="#64748B"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
