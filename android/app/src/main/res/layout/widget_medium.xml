<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_medium_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TrumpWatch"
            android:textSize="14sp">
            <span android:text="Trump" android:textColor="#FFFFFF" />
            <span android:text="Watch" android:textColor="#EF4444" />
        </TextView>

        <TextView
            android:id="@+id/day_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 330 of 1,461"
            android:textColor="#94A3B8"
            android:textSize="11sp"/>
    </LinearLayout>

    <!-- Countdown blocks -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/countdown_box_background"
            android:padding="8dp"
            android:layout_marginEnd="4dp">
            <TextView
                android:id="@+id/days_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1131"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DAYS"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/countdown_box_background"
            android:padding="8dp"
            android:layout_marginEnd="4dp">
            <TextView
                android:id="@+id/hours_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HRS"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/countdown_box_background"
            android:padding="8dp"
            android:layout_marginEnd="4dp">
            <TextView
                android:id="@+id/minutes_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MIN"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/countdown_box_background"
            android:padding="8dp">
            <TextView
                android:id="@+id/seconds_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEC"
                android:textColor="#94A3B8"
                android:textSize="9sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Progress bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:progressDrawable="@drawable/progress_bar_fill"
        android:max="1000"
        android:progress="225"/>

    <TextView
        android:id="@+id/progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="22.53% of term completed"
        android:textColor="#94A3B8"
        android:textSize="10sp"/>

    <!-- Stats row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="US National Debt"
                android:textColor="#94A3B8"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/debt_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$38,3T"
                android:textColor="#EF4444"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S&amp;P 500"
                android:textColor="#94A3B8"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/sp500_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6,827"
                android:textColor="#22C55E"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>