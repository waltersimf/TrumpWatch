<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_medium_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TrumpWatch Countdown"
            android:textColor="#EF4444"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:letterSpacing="0.05"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/widget_background_card"
        android:paddingVertical="8dp"
        android:layout_marginBottom="8dp">

        <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center">
            <TextView android:id="@+id/countdown_days" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="DAYS" android:textColor="#64748B" android:textSize="8sp"/>
        </LinearLayout>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=":" android:textColor="#475569"/>

        <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center">
            <TextView android:id="@+id/countdown_hours" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="HRS" android:textColor="#64748B" android:textSize="8sp"/>
        </LinearLayout>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=":" android:textColor="#475569"/>

        <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center">
            <TextView android:id="@+id/countdown_mins" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="MIN" android:textColor="#64748B" android:textSize="8sp"/>
        </LinearLayout>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=":" android:textColor="#475569"/>

        <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center">
            <TextView android:id="@+id/countdown_secs" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00" android:textColor="#FFFFFF" android:textSize="16sp" android:textStyle="bold"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SEC" android:textColor="#64748B" android:textSize="8sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingEnd="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="US National Debt"
                android:textColor="#94A3B8"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/stat_debt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$36.1T"
                android:textColor="#EF4444"
                android:textStyle="bold"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingStart="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S&amp;P 500"
                android:textColor="#94A3B8"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/stat_sp500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5,900"
                android:textColor="#22C55E"
                android:textStyle="bold"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
