<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TrumpWatch Tracker"
            android:textColor="#EF4444"
            android:textStyle="bold"
            android:textSize="13sp" />
            
        <TextView
            android:id="@+id/last_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Updated"
            android:textColor="#64748B"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="National Debt"
                android:textColor="#CBD5E1"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/debt_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$36.1T"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gas Price"
                android:textColor="#CBD5E1"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/gas_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$3.15"
                android:textColor="#4ADE80"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="S&amp;P 500" 
                android:textColor="#CBD5E1"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/sp500_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5,900"
                android:textColor="#60A5FA"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>